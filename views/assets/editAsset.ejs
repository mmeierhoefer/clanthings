<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Edit <%= asset.title %></h1>
        <div style="width:30%; margin: 25px auto">
        <form action="/assets/<%= asset._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <select class="form-control" name="asset[assetType]" value='<%= asset.assetType %>'>
                    <option value='vehicle'>Vehicle</option>
                    <option value='house'>House</option>
                    <option value='tool'>Tool</option>
                </select>
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="asset[title]" value='<%= asset.title %>'>
            </div>
