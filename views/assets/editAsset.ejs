                    <option value='tool'>Tool</option>
                </select>
            </div> -->
            <div class="form-group">
                <input class="form-control" type="text" name= "asset[image]" value='<%= asset.image %>'>
            </div>
            <div class="form-group">
                <input class="form-control"type="text" name= "asset[description]" value='<%= asset.description %>'>
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Submit!!!</button>
            </div>
        </form>
            <a href="/assets">Go Back</a>
        </div>
    </div>
</div>
