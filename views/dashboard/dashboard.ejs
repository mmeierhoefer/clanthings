<% include ../partials/header %>

<div class="container">
    <div class="row" id='bg'>
        <div class='col-md-4'>
            <h3 style=" text-align: center"><a href='/assets'>Shipments</a></h3>
            <h6>Pending Orders<span style='float: right'><%= pendingOrder.length %></span></h6>
            <table class='table table-hover table-condensed'>
                <tr>
                    <th>Terminal</th>
                    <th>Due Date</th>
                    <th>Status</th>
                </tr>
                <% for(i = 0; i < pendingOrder.length; i++) { %>
                <tr>
                    <td><%= pendingOrder[i][743] %></td>
                    <td><%= moment(pendingOrder[i][184]).format('M/D/YYYY') %></td>
                    <td><%= pendingOrder[i][510] %></td>
                </tr>
                 <% } %>
            </table>
            <h6>Pending Returns<span style='float: right'><%= pendingReturn.length %></span></h6>
            <table class='table table-hover table-condensed'>
                <tr>
                    <th>Terminal</th>
                    <th>Return Date</th>
                    <th>Platform</th>
                </tr>
                <% for(i = 0; i < pendingReturn.length; i++) { %>
                <tr>
                    <td><%= pendingReturn[i][743] %></td>
                    <td><%= moment(pendingReturn[i][184]).format('M/D/YYYY') %></td>
                    <td><%= pendingReturn[i][510] %></td>
                </tr>
                 <% } %>
            </table>
        </div>
        <div class='col-md-4'>
            <h3 style=" text-align: center"><a href='/tickets'>React Tickets</a></h3>
        </div>
        <div class='col-md-4'>
            <h3 style=" text-align: center"><a href='/surveys'>Surveys</a></h3>
        </div>
    </div>
</div>

<% include ../partials/footer %>

